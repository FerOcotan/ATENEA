<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FCF5FD"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".login">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Logo"
        android:src="@drawable/ateneablack" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome back"
        android:textSize="24sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Sign in to access your account"
        android:textColor="#D37A7575"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <EditText
        android:id="@+id/emailInput"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:background="#1DB3ADAD"
        android:backgroundTint="@android:color/darker_gray"
        android:drawableEnd="@drawable/baseline_alternate_email_24"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingStart="7dp" />


    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:background="#1DB3ADAD"
        android:backgroundTint="@android:color/darker_gray"
        android:drawableEnd="@drawable/baseline_lock_outline_24"

        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="7dp" />


    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rememberMeCheck"
            android:layout_width="184dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#BEBEBE"
            android:text="Remember me"
            android:textColor="#B3ACB0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:text="Forget password?"
            android:textColor="#6BA478"
            android:textSize="12sp" />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="59dp" />

    <Button
        android:id="@+id/googleSignInButton"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/mapq"
        android:text="Continue with Google"

        android:textColor="@color/black" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="313dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#6CA579"
        android:text="Next"
        android:textColor="@color/white"
        app:strokeColor="#000000" />


    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="New Member? Register now"
        android:textColor="@color/black" />


</LinearLayout>
