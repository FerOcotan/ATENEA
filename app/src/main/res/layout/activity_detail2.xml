<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DetailActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contenedor Principal con Bordes Redondeados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"

            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/detailuni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad"
                android:layout_marginTop="14dp"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:textColor="@color/Verdemenuprimary" />

            <!-- Imagen con Bordes Redondeados -->

            <!-- Nombre de Materia -->
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/detailImage"
                android:layout_width="226dp"
                android:layout_height="137dp"
                android:layout_marginBottom="16dp"

                android:src="@drawable/baseline_auto_delete_24" />

            <TextView
                android:id="@+id/detailmateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="Nombre materia"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/Verdemenuprimary" />

            <!-- Botón de Eliminar -->
            <Button
                android:id="@+id/deletebutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Eliminar"
                android:textColor="@color/white"
                android:backgroundTint="#B61249"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
