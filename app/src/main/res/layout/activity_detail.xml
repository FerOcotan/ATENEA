<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con Imagen -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="222dp"
                android:layout_gravity="center"
                android:layout_height="117dp"
                android:src="@drawable/baseline_auto_delete_24" />
        </androidx.cardview.widget.CardView>

        <!-- Información en Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <TextView
                    android:id="@+id/detailcodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código: 12345"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/detaildocente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Docente: Erazo"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/detailnombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia: Programación Avanzada"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/detailseccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sección: A1"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Más Información -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/detailparticipantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Participantes: 30"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/detailinicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora Inicio: 8:00 AM"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/detailsalida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora Salida: 10:00 AM"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón de Acción -->
        <Button
            android:id="@+id/deletebutton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Eliminar"
            android:backgroundTint="#90133D"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            app:cornerRadius="24dp" />
    </LinearLayout>
</ScrollView>
