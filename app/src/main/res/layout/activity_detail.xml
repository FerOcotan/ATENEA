<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Verdemenuprimary"
    android:id="@+id/main"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >



            <ImageView
                android:id="@+id/backButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_btn"
                android:padding="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info Subject"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:textSize="18sp" />
        </RelativeLayout>




        <!-- Contenedor Principal con Bordes Redondeados -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="702dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:orientation="vertical"

            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="120dp">

            <!-- Título -->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"

                android:text="¡This is your subject information!"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Materia"
                android:textColor="@color/BlancoHueso"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/detaildocente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginBottom="12dp"

                android:text="Docente"
                android:textColor="@color/BlancoHueso"
                android:textSize="16sp"/>

            <!-- Imagen con Bordes Redondeados -->

            <!-- Nombre de Materia -->

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="276dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:src="@drawable/clastrash" />



            <TextView
                android:id="@+id/detailcodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dp"
                android:text="Codigo"
                android:textColor="@color/BlancoHueso"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="246dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/detailseccion"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif"
                    android:text="Sección: A1"
                    android:textColor="@color/BlancoHueso"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailparticipantes"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Participantes"
                    android:textColor="@color/BlancoHueso"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="246dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/detailinicio"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Hora Inicio: 8:00 AM"
                    android:textColor="@color/BlancoHueso"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detailsalida"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Hora Salida: 10:00 AM"
                    android:textColor="@color/BlancoHueso"
                    android:paddingStart="25dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/deletebutton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/BlancoHueso"
                android:fontFamily="sans-serif-medium"
                android:text="Delete"
                android:textColor="@color/Primary"
                android:textSize="18sp"
                app:cornerRadius="16dp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
