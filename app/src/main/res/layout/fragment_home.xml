<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">

    <!-- Layout superior con saludos y foto de perfil -->
    <LinearLayout
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="30dp">

        <!-- Sección de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="158dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hi_homefragment"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name__homefragment"
                    android:textSize="30sp" />


            </LinearLayout>

            <TextView

                android:id="@+id/textView11"
                android:layout_width="193dp"
                android:layout_height="66dp"

                android:text="@string/welcome_back_have_a_pleasure_day"
                android:textColor="#AD000000"
                android:textSize="16sp" />


        </LinearLayout>


        <!-- Imagen de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/buttonprofile"
            android:layout_width="66dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:src="@drawable/profileimage"
            app:shapeAppearanceOverlay="@style/round_button" />

    </LinearLayout>

    <!-- Nueva sección de contenido adicional -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="160dp">

        <!--  TextView como título de sección -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_width="137dp"
                android:paddingStart="30dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:text="@string/activity__homefragment"
                android:textColor="#90000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/order"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/baseline_more_horiz_24" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="379dp"
                android:layout_height="match_parent" />
        </LinearLayout>



        <!--  continuar añadiendo vistas o contenedores aquí -->

    </LinearLayout>

</FrameLayout>
