<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:paddingTop="15dp"
    tools:context=".HomeFragment">

    <!-- Sección superior con el perfil a la derecha y el buscador a la izquierda -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="10dp">

        <!-- Buscador a la izquierda -->
        <SearchView
            android:id="@+id/search"
            android:layout_width="264dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lavender_border"
            android:queryHint="Buscar..."
            app:iconifiedByDefault="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonprofile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:searchHintIcon="@null" />

        <!-- Imagen de perfil a la derecha -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/buttonprofile"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profileimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444"
            app:shapeAppearanceOverlay="@style/round_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor principal para los botones y vistas de contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingTop="90dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >

        <!-- Botones para alternar entre las vistas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_create_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CREATE SUBJECT"
                android:backgroundTint="@color/Verdemenuprimary"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/button_list_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LIST"
                android:backgroundTint="@color/Verdesemiclaromenu"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- FrameLayout para alternar entre las vistas -->
        <FrameLayout
            android:background="@drawable/lavender_border"
            android:id="@+id/container_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp">

            <!-- Vista de Crear Materia -->
            <LinearLayout
                android:id="@+id/view_create_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear Materia"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/Verdemenuprimary" />

                <!-- Código de materia -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/creador"
                    android:hint="Docente"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/lavender"
                    android:gravity="start|center_vertical" />
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/codigomateria"
                    android:hint="Ingrese el código de materia"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/lavender" />

                <!-- Nombre de materia -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombremateria"
                    android:hint="Ingrese el nombre de materia"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/lavender" />

                <!-- Número de participantes -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/participantes"
                    android:hint="Número de participantes"
                    android:inputType="number"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/lavender" />

                <!-- Sección -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seccion"
                    android:hint="Sección"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/lavender_border"
                    android:textColor="@color/lavender" />

                <!-- Horarios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/horainicio"
                        android:hint="Hora inicio"
                        android:inputType="datetime"
                        android:padding="12dp"
                        android:background="@drawable/lavender_border"
                        android:textColor="@color/lavender" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/horasalida"
                        android:hint="Hora salida"
                        android:inputType="datetime"
                        android:padding="12dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/lavender_border"
                        android:textColor="@color/lavender" />


                </LinearLayout>

                <!-- Botón Guardar -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnagregarmateria"
                    android:text="CREAR MATERIA"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/BlancoHueso"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Vista de Lista de Materias -->
            <LinearLayout
                android:id="@+id/view_list_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List of Subjects"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <!--  agregar una RecyclerView o una lista de prueba -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subject 1: Mathematics\nSubject 2: Science\n..."
                    android:padding="10dp" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
