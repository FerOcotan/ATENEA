<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:paddingTop="15dp"
    tools:context=".HomeFragment">

    <!-- Sección superior con el perfil a la derecha y el buscador a la izquierda -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="10dp"
        android:paddingBottom="30dp">



        <!-- Imagen de perfil a la derecha -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/buttonprofile"
            android:layout_width="66dp"

            android:layout_height="66dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profileimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444"
            app:shapeAppearanceOverlay="@style/round_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenedor principal para los botones y vistas de contenido -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="666dp"

        android:orientation="vertical"

        android:paddingLeft="30dp"
        android:paddingTop="90dp"
        android:paddingRight="30dp">

        <!-- Botones para alternar entre las vistas -->

        <!-- FrameLayout para alternar entre las vistas -->
        <FrameLayout

            android:id="@+id/container_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_create_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp">

                <!-- Vista de Crear Materia -->
                <LinearLayout
                    android:id="@+id/view_create_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp"

                    android:visibility="visible">

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Create Subject"
                        android:textColor="@color/Verdemenuprimary"
                        android:textSize="24sp"

                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="62dp"
                        android:layout_height="63dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_add_circle_outline_24" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Professor"
                        android:paddingTop="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="15dp"
                        app:boxCornerRadiusTopStart="15dp"
                        app:boxStrokeColor="@color/Verdesemiclaromenu"
                        app:boxStrokeWidth="3dp"
                        app:boxStrokeWidthFocused="2dp"


                        app:endIconDrawable="@drawable/baseline_class_24"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/creador"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"

                            app:hintTextColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Code"

                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="15dp"
                        app:boxCornerRadiusTopStart="15dp"
                        app:boxStrokeColor="@color/Verdesemiclaromenu"
                        app:boxStrokeWidth="3dp"
                        app:boxStrokeWidthFocused="2dp"


                        app:endIconDrawable="@drawable/baseline_numbers_24"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/codigomateria"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            app:hintTextColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"

                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="15dp"
                        app:boxCornerRadiusTopStart="15dp"
                        app:boxStrokeColor="@color/Verdesemiclaromenu"
                        app:boxStrokeWidth="3dp"
                        app:boxStrokeWidthFocused="2dp"


                        app:endIconDrawable="@drawable/baseline_drive_file_rename_outline_24"
                        app:endIconMode="custom"
                        app:hintTextColor="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nombremateria"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            app:hintTextColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"

                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:hint="Students"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxStrokeColor="@color/Verdesemiclaromenu"
                            app:boxStrokeWidth="3dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconDrawable="@drawable/baseline_emoji_people_24"
                            app:endIconMode="custom"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/participantes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:inputType="number"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:hint="Section"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxStrokeColor="@color/Verdesemiclaromenu"
                            app:boxStrokeWidth="3dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconDrawable="@drawable/baseline_groups_24"
                            app:endIconMode="custom"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/seccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:inputType="text"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Horarios -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:focusable="false"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:hint="Start"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxStrokeColor="@color/Verdesemiclaromenu"
                            app:boxStrokeWidth="3dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconDrawable="@drawable/baseline_timer_24"
                            app:endIconMode="custom"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/horainicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:gravity="start|center_vertical"
                                android:inputType="time"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:hint="End"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="15dp"
                            app:boxCornerRadiusTopStart="15dp"
                            app:boxStrokeColor="@color/Verdesemiclaromenu"
                            app:boxStrokeWidth="3dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconDrawable="@drawable/baseline_timer_off_24"
                            app:endIconMode="custom"
                            app:hintTextColor="@color/black">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/horasalida"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:gravity="start|center_vertical"
                                android:inputType="time"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Horarios -->


                    <!-- Botón Guardar -->

                    <Button

                        android:id="@+id/btnagregarmateria"
                        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/Verdemenuprimary"
                        android:padding="12dp"
                        android:text="Save"
                        android:textColor="@color/BlancoHueso"
                        app:icon="@drawable/baseline_save_24" />

                    <Button

                        android:id="@+id/button_list_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@color/Verdeoscuromenu"
                        android:text="View Subjects"
                        android:textColor="@color/BlancoHueso"
                        app:icon="@drawable/baseline_edit_document_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Vista de Lista de Materias -->


            <!-- Buscador a la izquierda -->


            <LinearLayout
                android:id="@+id/view_list_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="List of Subjects"
                    android:textColor="@color/Verdeoscuromenu"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">


                    <!-- SearchView -->
                    <SearchView
                        android:id="@+id/search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/lavender_border"
                        android:queryHint="Buscar..."
                        app:iconifiedByDefault="false"
                        app:searchHintIcon="@null" />

                    <!-- Botón para crear materia -->
                    <Button
                        android:id="@+id/button_create_subject"
                        android:text="Create subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/Verdeoscuromenu"
                        app:icon="@drawable/baseline_add_24" />

                </LinearLayout>

                <!--  agregar una RecyclerView o una lista de prueba -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/search"
                    android:layout_marginTop="10dp"
                    android:scrollbars="vertical" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
