<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recCard"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/books" />

        <!-- Contenido textual -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre Materia -->
            <TextView
                android:id="@+id/tmateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nombre Materia"
                android:textColor="@color/Verdemenuprimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Sección -->
            <TextView
                android:id="@+id/docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Professor"
                android:textColor="@color/Verdeoscuromenu"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tseccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Seccion:"
                android:textColor="@color/Verdeoscuromenu"
                android:textSize="14sp" />

            <!-- Participantes -->
            <TextView
                android:id="@+id/tparticipantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Students:"
                android:textColor="@color/Verdeoscuromenu"
                android:textSize="14sp" />

            <!-- Horarios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/thoraini"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"

                    android:text="Start:"
                    android:textColor="@color/Verdemenuprimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/thorasali"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="End:"
                    android:textColor="@color/Verdeoscuromenu"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Docente -->
        </LinearLayout>

        <!-- Código -->
        <TextView
            android:id="@+id/tcodigo"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="Code"
            android:textColor="@color/Verdeoscuromenu"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
