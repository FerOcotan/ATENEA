<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Atenea" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>



    </style>


    <style name="DialogAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>
    </style>

    <style name="Theme.Atenea" parent="Base.Theme.Atenea" />


    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name= "colorControlActivated"  > @color/night_mode</item>
        <item name= "colorSwitchThumbNormal">#FFFFFF</item>
        <item name= "android:colorForeground">#000000</item>
    </style>

</resources>